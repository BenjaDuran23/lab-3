<div class="text-center">
  <h1>Contact Me</h1>
  <p>Fill in the form below and we will get back to you a message soon.</p>
</div>

<div class="row justify-content-center" id = "contact_">
  <div class="col-md-6">
    <%= form_with url: "/contact", method: "post", local: true, class: "card p-4 shadow" do |f| %>
      <div class="mb-4">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>
      <div class="mb-4">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>
      <div class="mb-4">
        <%= f.label :message, class: "form-label" %>
        <%= f.text_area :message, class: "form-control", rows: 4, required: true %>
      </div>
      <%= f.submit "Submit", class: "btn btn-primary w-100" %>
    <% end %>
  </div>
</div>

<script>
document.getElementById("contact_").addEventListener("submit", function(event) {
    event.preventDefault();
    document.getElementById("message_new").classList.remove("d-none");
    this.querySelector('form').reset();
});

</script>

<div id="message_new" class="alert alert-success d-none text-center" role="alert">
 <h5>Thank you for your message, we will contact you soon.</h5>
</div>
